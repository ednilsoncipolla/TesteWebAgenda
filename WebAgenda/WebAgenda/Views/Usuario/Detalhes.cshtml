@model WebAgenda.Models.Usuario
@using WebAgenda.Controllers;

@{
    ViewBag.Title = "Detalhes do Usuário";
}

<h2>Detalhes</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
